<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.nybnsg.activity.ParticularsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll"
        android:background="#ff8000"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/imgfh"
            android:layout_weight="1"
            android:background="#ff8000"
            android:src="@mipmap/ic_action_back"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/etxqss"
            android:layout_weight="1"
            android:background="#dd3000"
            android:textColor="#ffffff"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/imgsousuoa"
            android:layout_weight="1"
            android:background="#ff8000"
            android:src="@mipmap/ic_action_search"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lll"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvpaixu"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="综合排序"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvxiaoliang"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="销量优先"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvshaixuan"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="筛选"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgqh"
            android:src="@mipmap/ic_goods_list_ver"/>

    </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rv"
    />
</LinearLayout>
