<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:fadeScrollbars="false"
    android:id="@+id/xiangqingll"
    android:weightSum="1"
    android:layout_height="match_parent" >
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/sll"
        android:layout_weight="1"
        android:layout_height="560dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FAFAFA"
            >
            <com.youth.banner.Banner
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/vp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                android:background="#ffffff"
                android:id="@+id/tvllsname"
                android:text="聂雁宾"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvllsgj"
                android:textSize="20sp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="聂雁宾"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:id="@+id/rl">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tvllsmoney"
                    android:textColor="#FF0000"
                    android:layout_alignParentLeft="true"
                    android:text="聂雁宾"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvxiaoliang"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="聂雁宾"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:id="@+id/ll"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvsz"
                    android:layout_marginLeft="10dp"
                    android:text="送至"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/tvquanguo"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ff0000"
                    android:textColor="#ffffff"
                    android:text="全国"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvyouhuo"
                    android:layout_marginLeft="10dp"
                    android:text="有货"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvmianyunfei"
                    android:layout_marginLeft="10dp"
                    android:text="免运费"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lll"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvpingjia"
                    android:layout_marginLeft="10dp"
                    android:text="评价"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:id="@+id/tvhaopinglv"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="#ff0000"
                    android:textColor="#ffffff"
                    android:text="好评率：100%"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/tvpj"
                    android:gravity="center"
                    android:background="#ff0000"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:text="0人评价"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                android:id="@+id/rlrl">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvspjs"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="商品介绍"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_normal_dot_left"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lllll"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img1"
                    android:src="@mipmap/ic_goods_store"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvhsc"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="好商城V5"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_normal_dot_left"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv1"
                    android:layout_marginLeft="10dp"
                    android:text="描述：5.0分"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/tv2"
                    android:background="#ff0000"
                    android:layout_marginLeft="10dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv3"
                    android:layout_marginLeft="10dp"
                    android:text="服务：5.0分"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/tv4"
                    android:background="#ff0000"
                    android:layout_marginLeft="10dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv5"
                    android:layout_marginLeft="10dp"
                    android:text="物流：5.0分"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:id="@+id/tv6"
                    android:background="#ff0000"
                    android:layout_marginLeft="10dp"

                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvtuijian"
                android:text="店铺推荐"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="30sp"
                />
            <com.example.dell.nybnsg.utils.MyView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv"/>
        </LinearLayout>
    </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dl"
    android:layout_weight="0.5"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"

        android:orientation="vertical">
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/ic_goods_kefu"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_goods_cart"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/llgouwuche"
        android:background="#ff0000"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_collection_goods"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:id="@+id/tvjiarugwc"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ff0000"
        android:gravity="center"
        android:id="@+id/llgoumai"

        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:src="@mipmap/ic_collection_store"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即购买"
            android:id="@+id/tvgoumai"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>